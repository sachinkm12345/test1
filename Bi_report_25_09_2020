SELECT 
c.PERSON_ID,

C.LAST_NAME ||', '||C.FIRST_NAME AS DISPLAY_NAME, 
TO_CHAR(C.EFFECTIVE_START_DATE,'MM/DD/YYYY') AS EFFECTIVE_DATE

FROM PER_PERSON_NAMES_F C
