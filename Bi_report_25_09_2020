SELECT A.PERSON_ID , A.PERSON_NUMBER , B.EMAIL_ADDRESS
FROM PER_ALL_PEOPLE_F A ,PER_EMAIL_ADDRESSES B 
WHERE A.PERSON_ID = B.PERSON_ID
AND B.PERSON_ID = C.PERSON_ID
AND A.PERSON_NUMBER IN (:P_PERSON_NUMBER)



SELECT A.PERSON_ID , A.PERSON_NUMBER , B.EMAIL_ADDRESS ,
C.LAST_NAME ||', '||C.FIRST_NAME AS DISPLAY_NAME, TO_CHAR(C.EFFECTIVE_START_DATE,'MM/DD/YYYY') AS EFFECTIVE_DATE
FROM PER_ALL_PEOPLE_F A ,PER_EMAIL_ADDRESSES B ,PER_PERSON_NAMES_F C
WHERE A.PERSON_ID = B.PERSON_ID
AND B.PERSON_ID = C.PERSON_ID
AND A.PERSON_NUMBER IN (:P_PERSON_NUMBER)


