SELECT A.PROJECT_ID ,A.SEGMENT1,A.PROJECT_STATUS_CODE ,
 B.TASK_NUMBER ,B.TASK_NAME  
FROM PJF_PROJECTS_ALL_B A , PJF_TASKS_V B
WHERE A.PROJECT_ID =  B.PROJECT_ID
AND A.PROJECT_ID IN (:P_PROJECT_NUM)
AND B.TASK_NUMBER IN (:P_TASK_NUM)

SELECT A.PROJECT_ID ,A.SEGMENT1,A.PROJECT_STATUS_CODE ,
 B.TASK_NUMBER ,B.TASK_NAME  
FROM PJF_PROJECTS_ALL_B A , PJF_TASKS_V B
WHERE A.PROJECT_ID =  B.PROJECT_ID
AND A.PROJECT_ID IN (:P_PROJECT_NUM)
AND B.TASK_NUMBER IN (:P_TASK_NUM)

AND B.SEGMENT1 IN (:P_PROJECT_NUM)

